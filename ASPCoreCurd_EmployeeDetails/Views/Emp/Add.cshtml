@{
}

<h1>Register Details</h1>
<form method="post" action="Add" class="mt-5">
    <div class="mb-3">
        <label for="">Emp Name</label>
        <input type="text" class="form-control" asp-for="Name" placeholder="Enter Name">
    </div>
    <div class="mb-3">
        <label for="">Email Address</label>
        <input type="email" class="form-control" asp-for="Email" placeholder="Enter Email">
    </div>
    <div class="mb-3">
        <label for="">Salary</label>
        <input type="number" class="form-control" asp-for="Salary" placeholder="Enter Salary">
    </div>
    <div class="mb-3">
        <label for="">Date Of Birth</label>
        <input type="date" class="form-control" asp-for="DateOfBirth" placeholder="Enter DOB">
    </div>
    <div class="mb-3">
        <label for="">Department</label>
        <input type="text" class="form-control" asp-for="Department" placeholder="Enter Department">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>